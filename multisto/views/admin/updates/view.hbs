{{> Header}}

	<script language="javascript">

		$(document).ready(function(){
			$("#updates").addClass('active');
		})
        
        function viewNews(id) {
          window.location.href = "addEditUpdate?id=" + id;
          return false;			            
        }
        

	</script>

{{> HeaderInnerSto}}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <div class="row">
                        <div class="col-md-10">
                            <h4 class="title">  <img src="/img/details.png" width="30px;" style="padding-bottom:4px;" /> &nbsp;  {{record.TITLE}}</h4>
                        </div>
                        <div class="col-md-2">                
                            <button onclick="return viewNews({{record.ID}})" class="btn btn-info btn-fill btn-wd">Edit News</button>
                        </div>                    
                    </div>
                </div>

                <div class="content">
                    <span  style="float: right;"> <b>{{record.UpdateDate}}</b> </span>
                    <br />

                    {{{record.Details}}}

                    <br /><br />

                </div>
                {{#if record.coverphoto}}
                <div class="row">
                     <img src="{{record.coverphoto}}" width="500px;" style="padding-bottom:4px;padding-left: 20px" />
                </div>
                {{/if}}

            </div>
        </div>
    </div>

{{> Footer}}
